@import 'nib'
@import 'jeet'
@import 'tools/normalize.css'

// clearfix
.clearfix
  clearfix()

// Sticky Footer
footerHeight = 70px

html
body
  height 100%

.page-wrap
  clearfix()
  overflow hidden
  min-height 100%
  margin-bottom -(footerHeight)
  &:after
    content ''
    display block
    height footerHeight

.footer
  height footerHeight

// Styles
.page
  font-family 'Open Sans', Arial, sans-serif
  font-size 15px
  line-height 1.4
  color #000

.footer
  text-align center
  line-height footerHeight

// Remove this styles before start coding
.page
  min-width 320px
  background #ccc

.page-wrap
  background #fff
  border-left 15px solid #404040
  border-right 15px solid #404040

.line
  width 100%
  height 0
  border-top 10px solid #404040

.flash
  box-sizing border-box
  max-width 100%
  display block
  margin 20px auto
  opacity .75
  border-radius 256px
  background #ccc

.start
  color #4d4d4d
  text-align center
  font-size 60px
  @media screen and (max-width: 360px)
    font-size 48px

.coding
  margin 0 auto
  display block
  max-width 100%
  opacity .75

.footer
  background #404040

.copyright
  color #ccc
