extends layouts/layout.default.pug

append styles
  style.
    .page__wrap {
      position: relative;
      background: #fff;
      }
    .page__footer {
      position: relative;
      z-index: 999;
      }
    .hello {
      position: absolute;
      width: 100%;
      height: 100%;
      text-align: center;
      font-size: 0;
      }
    .hello:before {
      content: '';
      display: inline-block;
      height: 100%;
      vertical-align: middle;
      }
    .hello__inner {
      margin-top: -70px;
      display: inline-block;
      vertical-align: middle;
      }
    .coding {
      margin: 0 auto 30px auto;
      display: block;
      max-width: 40px;
      opacity: .75;
      }
    .start {
      margin: 30px 0 0 0;
      color: #4d4d4d;
      text-align: center;
      font-size: 48px;
      }
    .description {
      margin: 0 auto;
      width: 90%;
      line-height: 69px;
      text-align: center;
      border-top: 1px solid #ccc;
      }

block page
  .page__wrap
    .hello
      .hello__inner
        img.coding(src="assets/images/source_code.png", alt="")
        .start Let's Code!
  .page__footer
    .footer
      .description Pug and Stylus starter kit.
